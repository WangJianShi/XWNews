#import "UILabel+XWExt.h"

@implementation UILabel (XWExt)

+(UILabel *)creatLabelWithFont:(CGFloat )font textColor:(UIColor *)color {
    
    UILabel *lab = [[UILabel alloc] init];
    lab.textColor = color;
    lab.font = kFont(font);
    
    return lab;
}

+(UILabel *)creatLabelWithFont:(CGFloat )font textColor:(UIColor *)color Alignment:(NSTextAlignment)alignment{
    
    UILabel *lab = [[UILabel alloc] init];
    lab.textColor = color;
    lab.font = kFont(font);
    lab.textAlignment = alignment;
    
    return lab;
}




@end
